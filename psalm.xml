<?xml version="1.0"?>
<psalm
        errorLevel="4"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://getpsalm.org/schema/config"
        xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="src" />
        <ignoreFiles>
            <file name="src/WorkerFactory.php" />
            <file name="src/InvokeActivityRouter.php" />
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>
    <issueHandlers>
        <UndefinedAttributeClass>
            <errorLevel type="suppress">
                <referencedClass name="JetBrains\PhpStorm\ExpectedValues" />
            </errorLevel>
        </UndefinedAttributeClass>
        <MismatchingDocblockReturnType>
            <errorLevel type="suppress">
                <file name="src/WorkflowManagerInterface.php" />
                <file name="src/Workflow/Workflow.php" />
            </errorLevel>
        </MismatchingDocblockReturnType>
    </issueHandlers>
</psalm>
